      <svg class='h-4 w-4 flex-none fill-red-600 group-active:fill-current dark:fill-white'>
        <use xlink:href="<%= image_path('remixicon.symbol.svg') %>#ri-phone-fill"></use>
      </svg>
      <span class="ml-3">Morning Glory</span>
