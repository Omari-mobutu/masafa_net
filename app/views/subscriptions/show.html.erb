-- app/views/subscriptions/show.html.erb -->
<div class="container mx-auto px-4 py-8">
  <div class="bg-white dark:bg-gray-800 shadow-xl rounded-lg overflow-hidden p-8">
    <h1 class="text-3xl font-bold text-center text-gray-900 mb-6 dark:text-gray-100">
      Subscription Details
    </h1>

    <div class="space-y-4 text-gray-700 dark:text-gray-300">
      <div class="flex justify-between items-center border-b pb-2">
        <strong class="font-semibold text-gray-900 dark:text-gray-100">Name:</strong>
        <span><%= @subscription.name %></span>
      </div>
      <div class="flex justify-between items-center border-b pb-2">
        <strong class="font-semibold text-gray-900 dark:text-gray-100">Description:</strong>
        <span><%= @subscription.description %></span>
      </div>
      <div class="flex justify-between items-center border-b pb-2">
        <strong class="font-semibold text-gray-900 dark:text-gray-100">Price:</strong>
        <span>Ksh <%= number_with_precision(@subscription.price, precision: 2) %></span>
      </div>
      <div class="flex justify-between items-center border-b pb-2">
        <strong class="font-semibold text-gray-900 dark:text-gray-100">Duration:</strong>
        <span><%= pluralize(@subscription.duration_minutes, 'minute') %></span>
      </div>
      <div class="flex justify-between items-center">
        <strong class="font-semibold text-gray-900 dark:text-gray-100">FreeRADIUS Group:</strong>
        <span><%= @subscription.freeradius_group_name %></span>
      </div>
    </div>

    <div class="mt-8 flex justify-between items-center">
      <%= link_to "Edit this subscription", edit_subscription_path(@subscription), class: "bg-yellow-500 hover:bg-yellow-600 text-white font-bold py-2 px-4 rounded-lg transition-colors duration-200" %>
      <%= button_to "Destroy this subscription", @subscription, method: :delete, data: { turbo_confirm: "Are you sure?" }, class: "bg-red-600 hover:bg-red-700 text-white font-bold py-2 px-4 rounded-lg transition-colors duration-200" %>
    </div>
    <div class="mt-4 text-center">
      <%= link_to "Back to subscriptions", subscriptions_path, class: "text-blue-600 hover:underline dark:text-blue-400" %>
    </div>
  </div>
</div>