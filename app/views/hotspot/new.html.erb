<div class="min-h-screen flex items-center justify-center bg-gray-100">
  <div class="bg-white p-8 rounded-lg shadow-md w-full max-w-md">
    <h1 class="text-2xl font-bold text-center text-gray-100 mb-6">Welcome to Masafa WiFi!</h1>

    <% if flash[:alert] %>
      <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mb-4" role="alert">
        <span class="block sm:inline"><%= flash[:alert] %></span>
      </div>
    <% end %>
    <% if flash[:notice] %>
      <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded relative mb-4" role="alert">
        <span class="block sm:inline"><%= flash[:notice] %></span>
      </div>
    <% end %>

    <p class="text-gray-400 text-center mb-6">Choose a plan to get online.</p>

    <%= form_with url: hotspot_choose_subscription_path, method: :post, local: true, class: "space-y-4" do |form| %>
      <%# Hidden fields to pass context from MikroTik %>
      <%= form.hidden_field :mac, value: @client_mac %>
      <%= form.hidden_field :ip, value: @client_ip %>
      <%= form.hidden_field :"link-login", value: @link_login %> <%# MikroTik specific param name %>
      <%= form.hidden_field :auth_token, value: @auth_token %>

      <div class="mb-4">
        <label for="subscription_id" class="block text-gray-200 text-sm font-bold mb-2">Select your plan:</label>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
          <% @subscriptions.each do |subscription| %>
            <label class="block bg-white border border-gray-300 rounded-lg p-4 cursor-pointer hover:border-blue-500 transition-all duration-200">
              <input type="radio" name="hotspot[subscription_id]" value="<%= subscription.id %>" class="form-radio h-4 w-4 text-blue-600 focus:ring-blue-500" required>
              <span class="ml-2 text-gray-100 font-semibold"><%= subscription.name %></span>
              <p class="text-gray-400 text-sm"><%= subscription.description %></p>
              <p class="text-lg font-bold text-blue-700 mt-2">Ksh <%= number_with_precision(subscription.price, precision: 2) %></p>
            </label>
          <% end %>
        </div>
      </div>

      <div class="mb-6">
        <label for="phone_number" class="block text-gray-200 text-sm font-bold mb-2">
          M-Pesa Phone Number (2547XXXXXXXX):
        </label>
        <%= form.text_field :phone_number,
                            class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-200 leading-tight focus:outline-none focus:shadow-outline focus:border-blue-500",
                            placeholder: "e.g., 0712345678 or 0123456789",
                            pattern: "0[71][0-9]{8}",
                            title: "Please enter a valid M-Pesa phone number (07XXXXXXXX or 01XXXXXXXX)",
                            required: true %>
      </div>

      <div class="flex items-center justify-center">
        <%= form.submit "Pay & Get Online", class: "bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline cursor-pointer w-full" %>
      </div>
    <% end %>
  </div>
</div>