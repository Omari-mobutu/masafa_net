<div class="container mx-auto px-4 py-8">
  <div class="bg-white dark:bg-gray-800 shadow-xl rounded-lg p-8">
    <h1 class="text-3xl font-bold text-gray-900 dark:text-gray-100 mb-6">
      Analytics Dashboard
    </h1>

    <div class="mb-8">
      <h2 class="text-2xl font-semibold mb-4 text-gray-800 dark:text-gray-200">
        New User Visits Over Time
      </h2>
      <%= line_chart Ahoy::Visit.group_by_day(:started_at).count %>
    </div>

    <div class="mb-8">
      <h2 class="text-2xl font-semibold mb-4 text-gray-800 dark:text-gray-200">
        Top Viewed Pages
      </h2>
      <%= pie_chart Ahoy::Event.where(name: "New User Visit").group(:properties).count %>
    </div>
  </div>
</div>
<div class="container mx-auto px-4 py-8 max-w-2xl">
  <div class="bg-white dark:bg-gray-800 shadow-xl rounded-lg p-8">
    <h1 class="text-3xl font-bold text-center text-gray-900 mb-6 dark:text-gray-100">
      Daily Revenue
    </h1>

    <div class="my-8">
      <%= line_chart @daily_revenue_data, title: "Daily Revenue from Successful Subscriptions" %>
    </div>

    <%= link_to "Back", root_path, class: "text-blue-600 hover:underline dark:text-blue-400" %>
  </div>
</div>