<%= form_with(url: "/radprofile", scope: :radprofile, local: true, class: "contents") do |form| %>

  <div class="my-5">
    <%= form.label :groupname %>
    <%= form.text_field :group_name, class: "block shadow rounded-md border border-gray-400 outline-none px-3 py-2 mt-2 w-full" %>
  </div>

  <div class="my-5">
    <%= form.label :rate_limi, "Rate Limit (e.g., 6M/6M)" %>
    <%= form.text_field :rate_limit, class: "block shadow rounded-md border border-gray-400 outline-none px-3 py-2 mt-2 w-full" %>
  </div>

  <div class="my-5">
    <%= form.label :session_timeout, "Session Timeout (seconds)" %>
    <%= form.text_field :session_timeout, class: "block shadow rounded-md border border-gray-400 outline-none px-3 py-2 mt-2 w-full" %>
  </div>
  <div class="my-5">
    <%= form.label :idle_timeout, "Idle Timeout (seconds)" %>
    <%= form.text_field :idle_timeout, class: "block shadow rounded-md border border-gray-400 outline-none px-3 py-2 mt-2 w-full" %>
  </div>


  <div class="inline">
    <%= form.submit "Create Profile", class: "rounded-lg py-3 px-5 bg-blue-600 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>