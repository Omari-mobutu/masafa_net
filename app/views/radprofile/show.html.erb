<div class="container mx-auto px-4 py-8 max-w-2xl">
  <div class="bg-white dark:bg-gray-800 shadow-xl rounded-lg p-8">
    <div class="text-center mb-6">
      <h1 class="text-3xl font-bold text-gray-900 dark:text-gray-100">
        RADIUS Profile: <%= @profile[:group_name] %>
      </h1>
      <p class="text-sm font-semibold text-blue-600 dark:text-blue-400 mt-2">
        Profile Details
      </p>
    </div>

    <% if @profile %>
      <div class="bg-gray-50 dark:bg-gray-700 rounded-lg p-6">
        <h2 class="text-xl font-semibold text-gray-800 dark:text-gray-100 mb-4">Attributes</h2>
        <div class="overflow-x-auto">
          <table class="min-w-full divide-y divide-gray-200 dark:divide-gray-600">
            <thead class="bg-gray-100 dark:bg-gray-600">
              <tr>
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider dark:text-gray-400">
                  Attribute
                </th>
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider dark:text-gray-400">
                  Operation
                </th>
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider dark:text-gray-400">
                  Value
                </th>
              </tr>
            </thead>
            <tbody class="bg-white dark:bg-gray-800 divide-y divide-gray-200 dark:divide-gray-700">
              <% @profile[:attributes].each do |attr| %>
                <tr class="hover:bg-gray-50 dark:hover:bg-gray-700">
                  <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900 dark:text-gray-100">
                    <%= attr[:attribute] %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500 dark:text-gray-300">
                    <%= attr[:op] %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500 dark:text-gray-300">
                    <%= attr[:value] %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>

      <div class="mt-8 flex justify-end items-center space-x-4">
        <%= link_to "Back to All Profiles", radprofile_index_path, class: "text-blue-600 hover:underline dark:text-blue-400" %>
        <%= link_to "Edit Profile", edit_radprofile_path(@profile[:group_name]), class: "bg-yellow-500 hover:bg-yellow-600 text-white font-bold py-2 px-4 rounded-lg transition-colors duration-200" %>
      </div>
    <% else %>
      <p class="text-center text-lg text-gray-600 dark:text-gray-400">Profile not found.</p>
    <% end %>
  </div>
</div>